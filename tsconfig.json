{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "react-jsxdev",
    "lib": ["DOM", "es2015"],
    "module": "esnext",
    "moduleResolution": "nodenext",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@pluralsight/shared": ["./packages/shared/src/index.ts"],
      "test-utils": ["./packages/react-utils/tests/test-utils.ts"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "resolveJsonModule": true,
    "removeComments": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "esnext"
  },
  "exclude": ["website", "scripts", "packages/*/npm"]
}
