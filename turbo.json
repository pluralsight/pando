{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build:packages": {
      "inputs": ["packages/**/*", "!packages/sandbox/**/*"]
    },
    "build:website": {
      "inputs": ["website/**/*"]
    },
    "lint:css": {
      "inputs": ["**/*.css", "**/*.scss"]
    },
    "lint:js": {
      "inputs": ["**/*.js", "**/*.ts", "**/*.tsx"]
    },
    "lint:ts": {
      "inputs": ["**/*.ts", "**/*.tsx"]
    },
    "test": {
      "inputs": [
        "packages/**/*.ts",
        "packages/**/*.tsx",
        "packages/**/*.test.ts",
        "packages/**/*.test.tsx"
      ]
    }
  }
}
