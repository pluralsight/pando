#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

BRANCH=`git rev-parse --abbrev-ref HEAD`
PROTECTED_BRANCHES="^(main|gh-pages)"

if [[ $1 != *"$BRANCH"* ]]
then
  echo -e "\nðŸš« You must use (git push origin $BRANCH).\n" && exit 1
fi

if [[ "$BRANCH" =~ $PROTECTED_BRANCHES ]]
then
  echo -e "\nðŸš« Cannot push to remote $BRANCH branch. Please create your own branch and create a Pull Request."
fi

echo -e ">> Finish checking branch name.\n==="

exit 0
