---

import {css} from 'styled-system/css';
import {flex} from 'styled-system/patterns'
import {type Token} from '@pluralsight/panda-preset'

interface Props {
  title: string;
  description?: string;
  uses: string;
  colorTokenName: Token['base'];
  styles: any;
}

const {title, description, uses, colorTokenName, styles} = Astro.props;

const swatch = css.raw({bgColor: 'neutral.100'})

console.log('styles', styles)

---

<div class={flex({flexDir: 'row', alignItems: 'center', gap: '3'})}>
  <div
    class={css(styles, {
      height: '20',
      width: '20',
      borderRadius: 'md',
    })}
  />
  <ul aria-label="list of neutral color tokens">
    <li class={css({color: 'neutral.text.300'})}>
      <strong>{title}</strong>
    </li>
    {description && <li>
      {description}
    </li>}
    <li class={css({color: 'neutral.text.100'})}>
      Use for: {uses}
    </li>
    <li class={css({color: 'neutral.text.100'})}>
     <p>Token Name: <code>{colorTokenName}</code></p>
    </li>
  </ul> 
</div>