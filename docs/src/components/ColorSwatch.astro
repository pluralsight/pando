---

import {css} from 'styled-system/css';
import {flex} from 'styled-system/patterns'
import {type Token} from '@pluralsight/panda-preset'
import {token} from 'styled-system/tokens'

interface Props {
  title: string;
  description?: string;
  uses: string;
  colorTokenName: Token['base'];
  style: {
    bg: Token['base'];
  };
}

const {title, description, uses, colorTokenName, style} = Astro.props;

export const colorSwatchStyle = css.raw({
  height: '20',
  width: '20',
  borderRadius: 'md',
})

---

<div class={flex({flexDir: 'row', alignItems: 'center', gap: '3'})}>
  <slot />
  <ul aria-label="list of neutral color tokens">
    <li class={css({color: 'neutral.text.300'})}>
      <strong>{title}</strong>
    </li>
    {description && <li>
      {description}
    </li>}
    <li class={css({color: 'neutral.text.100'})}>
      Use for: {uses}
    </li>
    <li class={css({color: 'neutral.text.100'})}>
     <p>Token Name: <code>{colorTokenName}</code></p>
    </li>
  </ul> 
</div>