---
import {css} from '../../styled-system/css';
import {flex} from '../../styled-system/patterns';
interface Props {
  title: string;
  description: string;
  uses: string;
  color: string;
}

const {title, description, uses, color} = Astro.props;
---
<div class={flex({direction:"row"})}>
  <div class={css({bgColor: color, height: "8", width: "1/4", marginRight: '8', borderRadius: "md"})}>hi</div>
  <div>
    <div class={flex({direction: 'column'})}>
      <div>{title}</div>
      <div>{description}</div>
      <div>{uses}</div>
    </div>  
  </div>
</div>