{
  "name": "@pluralsight/pando",
  "description": "The unified design system for Pluralsight.",
  "private": true,
  "scripts": {
    "build:packages": "pnpm -r run build",
    "build:ci-sandboxes": "pnpm build:packages",
    "build:website": "pnpm --filter website build",
    "clear:website": "pnpm -w website clear",
    "deploy:website": "pnpm -w website deploy",
    "lint:configs": "eslint --max-warnings 0 \"./**/*.@(ts|js|cjs|mjs)\"",
    "lint:js": "pnpm -r lint:js",
    "lint:ts": "pnpm -r lint:ts",
    "postinstall": "husky install",
    "prepare:release": "pnpm -w shared-scripts run prepare-release",
    "prepare:stable-release": "pnpm -w shared-scripts run prepare-stable-release",
    "publish:packages": "pnpm -w shared-scripts run publish-packages",
    "start:sandbox": "pnpm --filter sandbox dev",
    "serve:website": "pnpm --filter website serve",
    "start:website": "pnpm --filter website start",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.5",
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@eslint/eslintrc": "^1.3.3",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.0.0",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "latest",
    "@types/eslint": "^8",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/prettier": "^2",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "babel-jest": "^29.5.0",
    "eslint": "^8.39.0",
    "eslint-config-eslint": "^7.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jest-dom": "^4.0.3",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-sonarjs": "^0.19.0",
    "globals": "^13.17.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.1",
    "jest-environment-jsdom": "^29.0.1",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "supports-color": "^9.2.2",
    "tslib": "latest",
    "typescript": "5.0.4",
    "typescript-plugin-css-modules": "^3.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:pluralsight/pando.git"
  },
  "license": "Apache 2.0",
  "engines": {
    "node": ">=18",
    "pnpm": "8.6.12"
  },
  "packageManager": "pnpm@8.6.12"
}
