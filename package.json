{
  "name": "@pluralsight/tva",
  "description": "The unified design system for Pluralsight.",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "website",
    "scripts"
  ],
  "scripts": {
    "build:packages": "yarn workspaces foreach --no-private run build",
    "build:website": "yarn workspace website build",
    "clear:website": "yarn workspace website clear",
    "deploy:website": "yarn workspace website deploy",
    "lint:css": "stylelint-config-prettier-check",
    "lint:js": "eslint --max-warnings 0 \"./**/*.@(ts|js|mjs)\"",
    "lint:ts": "tsc --noEmit",
    "postinstall": "husky install",
    "prepare:release": "yarn workspace release-script run prepare-release",
    "publish:packages": "yarn workspace release-script run publish-packages",
    "start:sandbox": "yarn workspace sandbox run dev",
    "serve:website": "yarn workspace website serve",
    "start:website": "yarn workspace website start",
    "test": "jest",
    "vscode:update": "yarn dlx @yarnpkg/sdks vscode"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.3.0",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/jest": "^28.1.6",
    "@types/node": "^17.0.21",
    "@types/prettier": "^2",
    "@types/testing-library__jest-dom": "^5",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "babel-jest": "^28.1.3",
    "eslint": "^8.2.0",
    "eslint-config-eslint": "^7.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.2.4",
    "eslint-plugin-sonarjs": "^0.10.0",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "lint-staged": "^12.0.2",
    "prettier": "2.4.1",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "supports-color": "^9.2.1",
    "typescript": "4.4.4"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:pluralsight/tva.git"
  },
  "license": "Apache 2.0",
  "engines": {
    "node": ">=14.10.0"
  },
  "packageManager": "yarn@3.2.1"
}
