{
  "name": "pando",
  "description": "The unified design system for Pluralsight.",
  "private": true,
  "workspaces": [
    "packages/*",
    "scripts",
    "bun",
    "website"
  ],
  "scripts": {
    "build:packages": "bun run bun/src/build-packages.mts",
    "build:website": "bun run bun/src/website/build.mts",
    "clear:website": "bun run bun/src/website/clear.mts",
    "deploy:website": "bun run bun/src/website/deploy.mts",
    "lint:configs": "eslint --max-warnings 0 \"./**/*.@(ts|js|cjs|mjs)\"",
    "lint:css": "bun run bun/src/lint-css.mts",
    "lint:js": "bun run bun/src/lint-js.mts",
    "lint:ts": "bun run bun/src/lint-ts.mts",
    "postinstall": "husky install",
    "prepare:release": "bun run bun/src/scripts/prepare-release.mts",
    "prepare:stable-release": "bun run bun/src/scripts/prepare-stable-release.mts",
    "publish:packages": "bun run bun/src/scripts/publish-packages.mts",
    "start:sandbox": "bun run bun/src/sandbox/start.mts",
    "serve:website": "bun run bun/src/website/serve.mts",
    "start:website": "bun run bun/src/website/start.mts",
    "test": "jest --passWithNoTests"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.5",
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@eslint/eslintrc": "^1.3.3",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "latest",
    "@types/eslint": "^8",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/prettier": "^2",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^6.4.1",
    "babel-jest": "^29.5.0",
    "bun-types": "^1.0.5-canary.20231005T140125",
    "eslint": "^8.39.0",
    "eslint-config-eslint": "^7.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jest-dom": "^4.0.3",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-sonarjs": "^0.19.0",
    "eslint-plugin-testing-library": "^6.0.0",
    "globals": "^13.17.0",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.1",
    "jest-environment-jsdom": "^29.0.1",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "supports-color": "^9.2.2",
    "tslib": "^2.6.2",
    "typescript": "5.1.6"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:pluralsight/pando.git"
  },
  "license": "Apache 2.0",
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.0.6",
  "dependencies": {
    "remove": "^0.1.5"
  }
}
