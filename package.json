{
  "name": "@pluralsight/pando",
  "description": "The unified design system for Pluralsight.",
  "private": true,
  "workspaces": [
    "packages/*",
    "website",
    "scripts"
  ],
  "scripts": {
    "build:packages": "yarn workspaces foreach --no-private --parallel run build",
    "build:sandboxes": "RELEASE_CHANNEL='experimental' yarn build:packages",
    "build:website": "yarn workspace website build",
    "clear:website": "yarn workspace website clear",
    "deploy:website": "yarn workspace website deploy",
    "lint:css": "stylelint-config-prettier-check",
    "lint:configs": "eslint --max-warnings 0 \"./**/*.@(ts|js|cjs|mjs)\"",
    "lint:js": "yarn workspaces foreach --parallel run lint:js",
    "lint:ts": "yarn workspaces foreach --parallel run lint:ts",
    "postinstall": "husky install",
    "prepare:release": "yarn workspace shared-scripts run prepare-release",
    "prepare:stable-release": "yarn workspace shared-scripts run prepare-stable-release",
    "publish:packages": "yarn workspace shared-scripts run publish-packages",
    "start:sandbox": "yarn workspace sandbox run dev",
    "start:react-sandbox": "yarn workspace react-sandbox run dev",
    "serve:website": "yarn workspace website serve",
    "start:website": "yarn workspace website start",
    "test": "jest",
    "vscode:update": "yarn dlx @yarnpkg/sdks vscode"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.5",
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "@eslint/eslintrc": "^1.3.3",
    "@testing-library/dom": "^8.17.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "latest",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/prettier": "^2",
    "@types/testing-library__jest-dom": "^5",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "babel-jest": "^29.5.0",
    "eslint": "^8.39.0",
    "eslint-config-eslint": "^7.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jest-dom": "^4.0.3",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-sonarjs": "^0.19.0",
    "globals": "^13.17.0",
    "husky": "^8.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.1",
    "jest-environment-jsdom": "^29.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.8.0",
    "stylelint": "^14.11.0",
    "stylelint-config-css-modules": "^4.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^28.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "supports-color": "^9.2.2",
    "tslib": "latest",
    "typescript": "5.0.2",
    "typescript-plugin-css-modules": "^3.4.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:pluralsight/pando.git"
  },
  "license": "Apache 2.0",
  "engines": {
    "node": ">=16"
  },
  "packageManager": "yarn@3.5.0"
}
