{
  "name": "@pluralsight/tva",
  "description": "The unified design system for Pluralsight.",
  "private": true,
  "workspaces": [
    "packages/*",
    "website",
    "scripts"
  ],
  "scripts": {
    "bundle:packages": "yarn workspace shared-scripts run create:bundles",
    "build:packages": "yarn workspaces foreach --no-private run build",
    "build:sandboxes": "RELEASE_CHANNEL='experimental' yarn bundle:packages &&  yarn build:packages",
    "build:website": "yarn workspace website build",
    "clear:website": "yarn workspace website clear",
    "deploy:website": "yarn workspace website deploy",
    "lint:css": "stylelint-config-prettier-check",
    "lint:js": "eslint --max-warnings 0 \"./**/*.@(ts|tsx|js|jsx|mjs)\"",
    "lint:ts": "tsc --noEmit",
    "postinstall": "husky install",
    "prepare:release": "yarn workspace shared-scripts run prepare-release",
    "prepare:stable-release": "yarn workspace shared-scripts run prepare-stable-release",
    "publish:packages": "yarn workspace shared-scripts run publish-packages",
    "start:sandbox": "yarn workspace sandbox run dev",
    "serve:website": "yarn workspace website serve",
    "start:website": "yarn workspace website start",
    "test": "jest",
    "vscode:update": "yarn dlx @yarnpkg/sdks vscode"
  },
  "devDependencies": {
    "@babel/cli": "latest",
    "@babel/core": "latest",
    "@babel/preset-env": "latest",
    "@babel/preset-react": "latest",
    "@babel/preset-typescript": "latest",
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "@eslint/eslintrc": "^1.3.1",
    "@testing-library/dom": "^8.17.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/babel__core": "latest",
    "@types/babel__preset-env": "latest",
    "@types/jest": "^28.1.6",
    "@types/node": "^17.0.21",
    "@types/prettier": "^2",
    "@types/testing-library__jest-dom": "^5",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "babel-jest": "latest",
    "eslint": "latest",
    "eslint-config-eslint": "latest",
    "eslint-config-prettier": "latest",
    "eslint-plugin-jest": "latest",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-react": "^7.31.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sonarjs": "latest",
    "globals": "^13.17.0",
    "husky": "^8.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.0.1",
    "jest-environment-jsdom": "^29.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "stylelint": "^14.11.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^28.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "supports-color": "^9.2.2",
    "tslib": "latest",
    "typescript": "4.7.4"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:pluralsight/tva.git"
  },
  "license": "Apache 2.0",
  "engines": {
    "node": ">=16"
  },
  "packageManager": "yarn@3.2.1"
}
