{
  "name": "pando",
  "description": "The unified design system for Pluralsight.",
  "private": true,
  "workspaces": [
    "packages/*",
    "tests",
    "sandbox",
    "scripts",
    "bun",
    "configs",
    "docs"
  ],
  "scripts": {
    "build:icons": "pnpm --filter @pluralsight/icons run build",
    "build:docs": "bun run bun/src/docs/build.mts",
    "build:preview:docs": "bun run build:docs && bun run preview:docs",
    "generate:sandbox-styles": "pnpm --filter sandbox run generate:panda",
    "lint:configs": "eslint --max-warnings 0 \"./**/*.@(ts|js|cjs|mjs)\"",
    "lint:css": "pnpm --filter \"@pluralsight/*\" run lint:css",
    "lint:js": "pnpm --filter \"@pluralsight/*\" run lint:js",
    "lint:ts": "pnpm --filter \"@pluralsight/*\" run lint:ts",
    "lint:sandbox": "pnpm --filter sandbox run lint",
    "lint:docs": "bun run bun/src/docs/lint.mts",
    "postinstall": "husky install",
    "prepare:release": "pnpm --filter shared-scripts run prepare-release",
    "prepare:stable-release": "pnpm --filter shared-scripts run prepare-stable-release",
    "preview:docs": "bun run bun/src/docs/preview.mts",
    "publish:packages": "pnpm --filter shared-scripts run publish-packages",
    "start:sandbox": "pnpm run generate:sandbox-styles && pnpm --filter sandbox run dev",
    "start:docs": "bun run bun/src/docs/start.mts",
    "install:canvas": "cd node_modules/canvas && npm install && cd ../..",
    "test": "pnpm --filter tests run test",
    "test:react": "NODE_OPTIONS=--experimental-vm-modules jest --passWithNoTests",
    "test:react:ci": "pnpm run install:canvas && pnpm run generate:sandbox-styles && pnpm run test:react --coverage"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.21.5",
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@eslint/eslintrc": "^1.3.3",
    "@pandacss/preset-panda": "^0.18.0",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "latest",
    "@types/eslint": "^8",
    "@types/jest": "^29.5.7",
    "@types/node": "^18.11.18",
    "@types/prettier": "^2",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "bun-types": "^1.0.6",
    "canvas": "^2.11.2",
    "eslint": "^8.39.0",
    "eslint-config-eslint": "^7.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-markdown": "^3.0.0",
    "eslint-plugin-sonarjs": "^0.19.0",
    "eslint-plugin-testing-library": "^6.0.0",
    "globals": "^13.17.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.0",
    "supports-color": "^9.2.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "license": "Apache 2.0",
  "packageManager": "bun@1.0.23",
  "repository": {
    "type": "git",
    "url": "git@github.com:pluralsight/pando.git"
  }
}
